{
    "version": 2,
    "configurePresets": [
      {
        "name": "Debug",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/debug",
        "cacheVariables": {
          "CMAKE_C_COMPILER": "clang",
          "CMAKE_CXX_COMPILER": "clang++",
          "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/deps/vcpkg/scripts/buildsystems/vcpkg.cmake",
          "CMAKE_BUILD_TYPE": "Debug",
          "CMAKE_MAKE_PROGRAM": "ninja"
        }
      },
      {
        "name": "Release",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/release",
        "cacheVariables": {
          "CMAKE_C_COMPILER": "clang",
          "CMAKE_CXX_COMPILER": "clang++",
          "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/deps/vcpkg/scripts/buildsystems/vcpkg.cmake",
          "CMAKE_BUILD_TYPE": "Release",
          "CMAKE_MAKE_PROGRAM": "ninja"
        }
      },
      {
        "name": "DebugEmscripten",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/debug-emscripten",
        "cacheVariables": {
          "CMAKE_C_COMPILER": "$env{EMSDK}/upstream/emscripten/emcc",
          "CMAKE_CXX_COMPILER": "$env{EMSDK}/upstream/emscripten/em++",
          "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/deps/vcpkg/scripts/buildsystems/vcpkg.cmake",
          "CMAKE_BUILD_TYPE": "Debug",
          "CMAKE_MAKE_PROGRAM": "/opt/clion/bin/ninja/linux/x64/ninja",
          "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": {
            "type": "FILEPATH",
            "value": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake"
          },
          "VCPKG_TARGET_TRIPLET": "wasm32-emscripten",
          "BGFX_CONFIG_MULTITHREADED": false,
          "EMSCRIPTEN_PRESET": true
        }
      }
    ]
  }
